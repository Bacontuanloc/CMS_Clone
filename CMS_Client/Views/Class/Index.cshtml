@model IEnumerable<CMS_Client.Entities.Class>

@{
    ViewData["Title"] = "Home Page";
    var userId = int.Parse(Context.Session.GetString("userId"));
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Products</title>
    <link rel="stylesheet" href="assets/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="assets/css/site.css" />
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidenav {
            height: 100%;
            width: 200px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #140b5c;
            overflow-x: hidden;
            padding-top: 20px;
        }

            .sidenav a {
                padding: 6px 6px 6px 32px;
                text-decoration: none;
                font-size: 25px;
                color: #818181;
                display: block;
            }

                .sidenav a:hover {
                    color: #f1f1f1;
                }

        .main {
            margin-left: 200px; /* Same as the width of the sidenav */
        }

        @@media screen and (max-height: 450px) {
            .sidenav {
                padding-top: 15px;
            }

                .sidenav a {
                    font-size: 18px;
                }
        }
    </style>
</head>

<body>

    <div class="sidenav">
        <a href="Home/Index">Home</a>
        <a asp-action="Index">Class</a>
        <a href="#">Clients</a>
        <a href="#">Contact</a>
    </div>
    <div class="container" style="margin-left:100px">
        <main role="main" class="pb-3">
            <div class="row mb-4">
                <h2 class="col-md">Manage Products</h2>
                <div class="col-md d-md-flex justify-content-md-end align-items-center me-md-3">
                    <a class="btn btn-primary" asp-action="Create" role="button">Create New</a>
                </div>
            </div>

            <div id="cardDeck" class="row row-cols-1 row-cols-md-3">
                @foreach (var item in Model)
                {
                    <div class="col mb-3">
                        <div class="card" aria-hidden="true">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <span class="col-6">@Html.DisplayFor(modelItem => item.ClassCode)</span>
                                </h5>
                                <p class="card-text">
                                    <span class="col-8">@Html.DisplayFor(modelItem => item.Description)</span>
                                </p>
                                <p class="card-text">
                                    <span class="col-8">Teacher: @userId</span>
                                </p>
                                @if (userId == 1)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.ClassId" class="btn btn-primary col mb-6">Edit</a>
                                    <a href="#" class="btn btn-primary col mb-6">Delete</a>
                                }
                                else if (userId == 2)
                                {
                                    <a href="#" tabindex="-1" class="btn btn-primary col-6">Detail</a>
                                }
                                else
                                {
                                    <a href="#" tabindex="-1" class="btn btn-primary col-6">Enroll</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="assets/lib/jquery/jquery.min.js"></script>
    <script src="assets/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/site.js"></script>
    <script src="assets/js/index.js"></script>

</body>

</html>